@model SpoofingUserProfiles.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="jumbotron">



    <div class="reside_inside" >
    <h2>Sign Up for a OneBox Account! It's free and easy.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        <div class="register_rounded">

            @Html.AntiForgeryToken()
            @*<h3>Please .</h3>*@
            <hr />


            <div class="center_the_form">

                    @Html.ValidationSummary()
                    <div class="form-group">
                        <p>@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })</p>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <p>@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })</p>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <p>@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })</p>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>

             </div>


        </div>

    }
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
